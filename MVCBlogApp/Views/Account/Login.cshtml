@model MVCBlogApp.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="content-section">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <fieldset class="form-group">
        <legend class="border-bottom mb-4">Log in</legend>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "form-control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control form-control-lg", @type = "password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-outline-info" />
            </div>
            <small class="text-muted ml-2">
                @Html.ActionLink("Forgot Password?", "ResetRequest", "Account")
            </small>
        </div>

    </fieldset>
    }
</div>
<div class="border-top pt-3">
    <small class="text-muted">
        Need An Account?@Html.ActionLink("Sign up now", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "ml-2" })
    </small>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}